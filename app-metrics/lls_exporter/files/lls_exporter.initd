name="LLS Exporter"
description="LLS Exporter for rs485/rs232 lls fuel level sensors"
pidfile=${pidfile:-"/run/${SVCNAME}.pid"}
command_user=${command_user:-nobody:nobody}

command="/usr/bin/lls_exporter"
command_background=true
retry="${retry:-TERM/20/KILL/5}"

output_logger="sh -c '/usr/bin/logger --tag lls_exporter'"
error_logger="sh -c '/usr/bin/logger --tag lls_exporter'"

depend() {
	need net
	after net
}
