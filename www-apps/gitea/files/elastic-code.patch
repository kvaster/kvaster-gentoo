+					pl = append(pl, SearchResultPosition{StartIndex: start, EndIndex: end})
+				}
+
+				if len(pl) == 0 {
+					continue
+				}
+
+				idx := 0
+				for cp, _ := range content {
+					_, ok := pm[idx]
+					if ok {
+						pm[idx] = cp
+					}
+					idx++
+				}
+
+				for i := range pl {
+					p := &pl[i]
+					p.StartIndex = pm[p.StartIndex]
+					p.EndIndex = pm[p.EndIndex]
+				}
