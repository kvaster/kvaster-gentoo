[Unit]
Description=Mattermost Chat Server
After=mysqld.service
After=postgresql.service

[Service]
Type=simple
User=mattermost
Group=mattermost
ExecStart=/usr/libexec/mattermost/bin/platform
WorkingDirectory=/usr/libexec/mattermost

Restart=on-failure
PrivateTmp=false

[Install]
WantedBy=multi-user.target
