#!/bin/sh
# tlp - handle suspend/hibernate/resume tasks
#
# Copyright (c) 2018 Thomas Koch <linrunner at gmx.net>
# This software is licensed under the GPL v2 or later.

. "${PM_FUNCTIONS}"

case $1 in
    hibernate|suspend)
        tlp suspend
        ;;

    thaw|resume)
        tlp resume
        ;;

    *) exit $NA
        ;;
esac

exit 0
